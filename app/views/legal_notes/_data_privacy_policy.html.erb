<%=tag.fieldset do %>
  <%=tag.legend l(:label_privacy_consent_text) %>
  <%=tag.p do %>
    <%= check_box_tag 'settings[enable_privacy_consent]',true,
        @settings['enable_privacy_consent'] %>
    <%= tag.span l(:label_enable_privacy_consent) %>
  <% end %>
  <%=tag.p do %>
  <%= text_field_tag 'settings[privacy_consent_text]', 
      @settings['privacy_consent_text'], 
      class: 'wiki-edit', size: 100 %>
      <%=tag.em class: 'info' do %>
        <%= LegalNote.user_privacy_consent_note %>
      <% end %> 
  <% end %>
  <%= wikitoolbar_for('settings_privacy_consent_text') %>
<% end %>

<%=tag.fieldset do %>
  <%=tag.legend l(:label_data_privacy_policy_text) %>
  <%=tag.p do %>
    <%=tag.em class: 'info' do %>
      <%= l(:note_data_privacy_policy) %>
    <% end %>
    <%= text_area_tag 'settings[data_privacy_policy]', 
        LegalNote.find(name: 'data-privacy-policy'), 
        class: 'wiki-edit', rows: 20 %>	 
  <% end %>
  <%= wikitoolbar_for('settings_data_privacy_policy') %>
<% end %>

<%=tag.fieldset do %>
  <%=tag.legend l(:label_data_privacy_policy_link_text) %>
  <%=tag.p do %>
    <%= text_field_tag 'settings[data_privacy_policy_link]', 
      @settings['data_privacy_policy_link'], size: 100 %>
    <%=tag.em class: 'info' do %>
      <%= l(:note_data_privacy_policy_link) %>
    <% end %> 
  <% end %>
<% end %>
